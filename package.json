{
  "name": "telegram-mini-app-fullstack",
  "version": "1.0.0",
  "private": true,
  "description": "Fullstack Telegram Mini App with Vue.js frontend and NestJS backend",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "frontend:lint": "npm run lint --workspace=frontend",
    "frontend:type-check": "npm run type-check --workspace=frontend",
    "backend:dev": "npm run start:dev --workspace=backend",
    "backend:build": "npm run build --workspace=backend",
    "backend:lint": "npm run lint --workspace=backend",
    "backend:test": "npm run test --workspace=backend",
    "lint": "npm run frontend:lint && npm run backend:lint",
    "test": "npm run backend:test",
    "build": "npm run frontend:build && npm run backend:build"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "vue",
    "nestjs",
    "fullstack"
  ],
  "license": "MIT"
}
